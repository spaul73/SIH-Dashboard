@page "/"
@inject NavigationManager NavManager
<NavBar />

<div class="d-flex justify-content-center align-items-center">

    <!-- Content -->
    <!--Card-->
    <div class="card" style="margin-top:150px;max-width:700px;min-width:250px;width:500px">

        <!--Card content-->
        <div class="card-body view view-cascade gradient-card-header rounded-lg">

            <h3 class="dark-grey-text text-center">
                <strong style="color:black">Find Hostels</strong>
            </h3>

            <form class="mr-auto mb-4">

                <div>
                    <br />
                    <input type="text" list="states" class="form-control heavy-rain-gradient" placeholder="Enter Hostel Location or Name" @bind-value="SearchQuery">
                    <datalist id="states" style="display:none">
                        @foreach (var s in states)
                        {
                            <option value="@s"></option>
                        }
                    </datalist>
                </div>
                <br />
                <center>
                <button type="button" class="btn blue-gradient waves-effect" style="color:white" @onclick="OnSearchButtonClick">
                    Search
                    </button>
                </center>

            </form>

        </div>

    </div>
    <!--/.Card-->
    <!-- Content -->

</div>

